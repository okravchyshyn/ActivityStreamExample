<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="activityService" name="activityService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.example.ActivityStreamExample.services.ActivityService"/>
    </bean>
    <bean id="groupService" name="groupService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.example.ActivityStreamExample.services.GroupService"/>
    </bean>
    <bean id="userService" name="userService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.example.ActivityStreamExample.services.UserService"/>
    </bean>
</beans>
